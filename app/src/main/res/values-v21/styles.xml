<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.SeafileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/fancy_dark_gray</item>
        <item name="colorPrimaryDark">@color/fancy_deep_black</item>
        <item name="colorAccent">@color/fancy_light_black</item>
        <item name="android:windowBackground">@color/fancy_light_white</item>
        <item name="android:actionModeStyle">@style/LightTheme.ActionMode</item>
        <item name="actionModeStyle">@style/LightTheme.ActionMode</item>
        <item name="android:homeAsUpIndicator">@drawable/home_up_btn</item>
        <item name="homeAsUpIndicator">@drawable/home_up_btn</item>
        <item name="android:textColorHighlight">#99ea8201</item>
        <item name="android:textSelectHandleLeft">@drawable/fancy_orange_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/fancy_orange_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/fancy_orange_text_select_handle_middle</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/fancy_gray</item>
        <item name="android:textColorSecondary">@color/fancy_black</item>
    </style>

    <style name="LightTheme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/fancy_white</item>
        <item name="background">@color/fancy_white</item>
    </style>

</resources>
