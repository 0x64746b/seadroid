<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.SeafileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#f4f4f4</item>
        <item name="colorPrimaryDark">#969593</item>
        <item name="colorAccent">@color/fancy_light_black</item>
        <item name="android:windowBackground">@color/fancy_light_white</item>
        <item name="android:listViewStyle">@style/SeafileListStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="android:actionModeStyle">@style/LightTheme.ActionMode</item>
        <item name="actionModeStyle">@style/LightTheme.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:colorButtonNormal">@color/fancy_orange</item>
        <item name="colorButtonNormal">@color/fancy_orange</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/dialog_button_negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialog_button_positive</item>
    </style>

    <style name="dialog_button_negative">
        <item name="android:textColor">@color/fancy_gray</item>
    </style>

    <style name="dialog_button_positive">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/fancy_orange</item>
    </style>

    <style name="NegativeButton" parent="android:style/Widget.Material.Button">
        <item name="android:colorButtonNormal">@color/fancy_dark_gray</item>
        <item name="colorButtonNormal">@color/fancy_dark_gray</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/fancy_gray</item>
        <item name="android:textColorSecondary">@color/fancy_black</item>
    </style>

    <style name="LightTheme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/fancy_white</item>
        <item name="background">@color/fancy_white</item>
    </style>

</resources>
